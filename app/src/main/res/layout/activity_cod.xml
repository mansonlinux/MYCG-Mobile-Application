<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg5"
    tools:context=".CODActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbarid"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:background="@color/black"
        android:elevation="0dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/tablelayout_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/codofdutybo4" />

    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tablelayout_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d35400"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appbarid"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/black"
        app:tabMode="fixed"
        app:tabTextColor="@color/Cloud" />

    <android.support.v4.view.ViewPager
        android:id="@+id/ViewerPagerId"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#353b48"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tablelayout_id" />
</android.support.constraint.ConstraintLayout>